<!-- CONSIGNE : BEGIN -->
      <div class="row consigne" id='consigne'>
        <div class="col-md-2 consigne-logo">
          <img src="<%=@display.logo%>"  class="img-responsive consigne-logo">
        </div>
        <div class="col-md-8">
          <div class="text-center consigne-text">              
            <%= simple_format(@display.consigne) %>
          </div>
        </div>
        <diV class="col-md-2">
          &nbsp;
        </diV>
      </div>
