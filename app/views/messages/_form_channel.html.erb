<%= form_for(message) do |f| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content, 'Nouveau message' %>
    <%= f.text_field :content, size: 160, maxlength: 160 %>
  </div>

  <div class="hidden">
    <%= f.label :author, 'Auteur' %>
    <%= f.text_field :author %>
  </div>

  <div class="hidden">
    <%= f.label :provider_id, 'Source' %>
    <%= f.text_field :provider_id, value: "4" %>
  </div>

  <div class="actions">
    <%= f.submit 'Valider' %>
  </div>

<% end %>
