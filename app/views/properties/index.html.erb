<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Propriétés</h3>
  </div>
  <div class="panel-body">

      <table class='table table-condensed'>
        <thead>
          <tr>
            <th>Nom</th>
            <th>Valeur</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @properties.each do |property| %>
            <tr>
              <td><%= property.name %></td>
              <td><%= property.value %></td>
              <td><%= link_to 'Détails', property %></td>
              <td><%= link_to 'Modifier', edit_property_path(property) %></td>
              <td><%= link_to 'Supprimer', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      <br>

      <%= link_to 'Nouvelle Propriété', new_property_path %>

  </div>
</div>